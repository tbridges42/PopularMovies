<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_parent"
    android:orientation="vertical" android:layout_width="match_parent"
    android:scrollbarStyle="insideOverlay"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/detail_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_padding"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <us.bridgeses.dateview.DateView
        android:id="@+id/detail_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dateview_date_format_str="yyyy"
        android:paddingEnd="@dimen/text_padding"
        android:paddingStart="@dimen/text_padding"
        android:paddingTop="@dimen/text_padding"
        android:textSize="@dimen/title_size"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/detail_poster" />
    <TextView
        android:id="@+id/detail_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/subheading_size"
        android:paddingEnd="@dimen/text_padding"
        android:paddingStart="@dimen/text_padding"
        android:layout_below="@id/detail_release"
        android:layout_toEndOf="@id/detail_poster"
        />
    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/detail_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_padding"
        android:layout_margin="@dimen/vertical_spacing"
        style="?android:attr/starStyle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />
    <TextView
        android:id="@+id/detail_synopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/subheading_size"
        android:paddingEnd="@dimen/text_padding"
        android:paddingStart="@dimen/text_padding"
        android:layout_below="@id/detail_ratings"
        android:layout_toEndOf="@id/detail_poster"/>
    <TextView
        android:id="@+id/trailer_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_size"
        android:paddingEnd="@dimen/text_padding"
        android:paddingStart="@dimen/text_padding"
        android:paddingBottom="@dimen/text_padding"
        android:text="@string/trailers"
        android:layout_below="@id/detail_poster"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/trailers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/trailer_tag"/>
    </RelativeLayout>
</ScrollView>